#include <Servo.h>

Servo myservo; // Create servo object

// --- PIN DEFINITIONS ---
const int ldrPin = A0;   // LDR connected to Analog pin A0
const int servoPin = 6;  // Servo signal pin connected to Digital pin 6

void setup() {
  myservo.attach(servoPin); // Attach servo to pin 6
  Serial.begin(9600); 
  Serial.println("LDR Servo Indicator Ready");
}

void loop() {
  // Read the LDR value (0 to 1023)
  int ldrValue = analogRead(ldrPin);

  // Map LDR value to Servo angle (0 to 180 degrees)
  // Brightest (low LDR value) -> 0 degrees
  // Darkest (high LDR value) -> 180 degrees
  int servoAngle = map(ldrValue, 0, 1023, 0, 180);

  // Constrain angle and move the servo
  servoAngle = constrain(servoAngle, 0, 180);
  myservo.write(servoAngle);

  Serial.print("LDR Value: ");
  Serial.print(ldrValue);
  Serial.print(" -> Angle: ");
  Serial.println(servoAngle);

  delay(20);
}
