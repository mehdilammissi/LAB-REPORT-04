/*
 * Project: Joystick Servo Control
 * Goal: Use the joystick's Y-axis position to control the angle of a 
 * servo motor (0 to 180 degrees).
 * * WIRING:
 * Servo Signal Pin -> Arduino 6
 * Joystick Y-Axis Analog Pin -> Arduino A1
 * Note: Requires the Servo.h library.
 */
#include <Servo.h>

Servo myServo; // Create servo object

// --- PIN DEFINITIONS ---
const int joystickYPin = A1; // Joystick Y-axis connected to Analog pin A1
const int servoPin = 6;      // Servo signal pin connected to Digital pin 6

void setup() {
  myServo.attach(servoPin); // Attach the servo object to the pin
  Serial.begin(9600);
  Serial.println("Joystick Servo Control Ready");
}

void loop() {
  // 1. Read the Joystick Y-axis analog value (0 to 1023)
  int yValue = analogRead(joystickYPin);

  // 2. Map the joystick input (0 to 1023) to the servo angle (0 to 180)
  // Moving the joystick from one extreme to the other moves the servo through its full range.
  int servoAngle = map(yValue, 0, 1023, 0, 180);

  // 3. Move the servo to the calculated angle
  myServo.write(servoAngle);

  // Output to Serial Monitor for verification
  Serial.print("Joystick Y-Value: ");
  Serial.print(yValue);
  Serial.print(" -> Servo Angle: ");
  Serial.println(servoAngle);

  // Small delay to allow the servo to move and for stability
  delay(15);
}
